From bdbab511908f9d21d7ac246150a38969fa97436c Mon Sep 17 00:00:00 2001
From: Abinaya <abinaya.dhandapani@amd.com>
Date: Wed, 19 Oct 2022 08:13:03 -0500
Subject: [PATCH] Change ISL driver to XDPE driver for xdpe VR parts

Signed-off-by: Abinaya <abinaya.dhandapani@amd.com>
---
 arch/arm/boot/dts/aspeed-bmc-amd-sunstone.dts | 10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/arch/arm/boot/dts/aspeed-bmc-amd-sunstone.dts b/arch/arm/boot/dts/aspeed-bmc-amd-sunstone.dts
index c44f60a6f750..a42e301048d4 100644
--- a/arch/arm/boot/dts/aspeed-bmc-amd-sunstone.dts
+++ b/arch/arm/boot/dts/aspeed-bmc-amd-sunstone.dts
@@ -214,31 +214,31 @@ i2c@0 {

 			p0_vdd_soc_run@40 {
 				//VDD SOC RUN
-				compatible = "isil,isl68137";
+				compatible = "infineon,xdpe12284";
 				reg = <0x40>;
 			};

 			p0_vdd_11_sus@42 {
 				//VDD 11 SUS
-				compatible = "isil,isl68137";
+				compatible = "infineon,xdpe12284";
 				reg = <0x42>;
 			};

 			p0_vdd_vddio_run@41 {
 				//VDD VDDIO RUN
-				compatible = "isil,isl68137";
+				compatible = "infineon,xdpe12284";
 				reg = <0x41>;
 			};

 			p0_vdd_18_dual@17 {
 				//VDD 18 DUAL
-				compatible = "isil,isl68137";
+				compatible = "infineon,xdpe12284";
 				reg = <0x17>;
 			};

 			p0_vdd_33_dual@16 {
 				//VDD 33 DUAL VRM
-				compatible = "isil,isl68137";
+				compatible = "infineon,xdpe12284";
 				reg = <0x16>;
 			};
 		};
