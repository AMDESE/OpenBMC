From 109fdfcce1233686ab39dd61c0044f8d32b93835 Mon Sep 17 00:00:00 2001
From: Vinu Vaghasia <vinu.vaghasia@amd.com>
Date: Thu, 13 Jan 2022 15:33:20 -0600
Subject: [PATCH 1/1] ARM:dts:aspeed: Add Ruby device tree VR sensors

VR Sensor addition into Ruby Device tree

Signed-off-by: Vinu Vaghasia <vinu.vaghasia@amd.com>
---
 arch/arm/boot/dts/aspeed-bmc-amd-ruby.dts | 24 +++++++++++++++++++++++
 1 file changed, 24 insertions(+)

diff --git a/arch/arm/boot/dts/aspeed-bmc-amd-ruby.dts b/arch/arm/boot/dts/aspeed-bmc-amd-ruby.dts
index 15134d5d4209..73cc5e0c050e 100644
--- a/arch/arm/boot/dts/aspeed-bmc-amd-ruby.dts
+++ b/arch/arm/boot/dts/aspeed-bmc-amd-ruby.dts
@@ -180,6 +180,30 @@
 		#address-cells = <1>;
 		#size-cells = <0>;

+		i2c@0 {
+			#address-cells = <1>;
+			#size-cells = <0>;
+			reg = <0>;
+
+			vddcr_core0_soc@61 {
+				//VDD core0 soc
+				compatible = "isil,isl68137";
+				reg = <0x61>;
+			};
+
+			vddcr_core1_11@62 {
+				//VDD 11
+				compatible = "isil,isl68137";
+				reg = <0x62>;
+			};
+
+			vddcr_vddio_33@63 {
+				//VDD 11 sus
+				compatible = "isil,isl68137";
+				reg = <0x63>;
+			};
+		};
+
 	};
 };

