+    };
+
+    bmc_gpio_cfg {
+        compatible = "lipari_gpios";
+
+        gpioq-gpios = <&gpio0 ASPEED_GPIO(Q,0) GPIO_ACTIVE_HIGH>,
+                    <&gpio0 ASPEED_GPIO(Q,1) GPIO_ACTIVE_HIGH>,
+                    <&gpio0 ASPEED_GPIO(Q,2) GPIO_ACTIVE_HIGH>,
+                    <&gpio0 ASPEED_GPIO(Q,5) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(Q,6) GPIO_ACTIVE_HIGH>,
+                    <&gpio0 ASPEED_GPIO(Q,7) GPIO_ACTIVE_HIGH>;
+
+        gpiob-gpios = <&gpio0 ASPEED_GPIO(B,1) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(B,2) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(B,3) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(B,4) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(B,6) GPIO_ACTIVE_LOW>;
+
+        gpioy-gpios = <&gpio0 ASPEED_GPIO(Y,0) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(Y,1) GPIO_ACTIVE_LOW>,
+                    <&gpio0 ASPEED_GPIO(Y,2) GPIO_ACTIVE_LOW>,
