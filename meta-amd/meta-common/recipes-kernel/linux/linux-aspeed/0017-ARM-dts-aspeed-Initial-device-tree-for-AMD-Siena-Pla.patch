+
+// Misc Regulators
+&i2c4 {
+	// Net name i2c1
+	status = "okay";
+	vdd33run@13 {
+		//VDD_33_RUN VRM
+		compatible = "infineon,xdpe12284";
+		reg = <0x13>;
+	};
+	vdd33dual@14 {
+		//VDD_33_DUAL VRM
+		compatible = "infineon,xdpe12284";
+		reg = <0x14>;
+	};
+	vdd5dual@15 {
+		//VDD_5_DUAL VRM
+		compatible = "infineon,xdpe12284";
+		reg = <0x15>;
+	};
+};
+
+// P0 VRs
+&i2c5 {
+	// Net name i2c2 (SCM_I2C2)
+	status = "okay";
+	i2cswitch@71 {
+		compatible = "nxp,pca9546";
+		reg = <0x71>;
