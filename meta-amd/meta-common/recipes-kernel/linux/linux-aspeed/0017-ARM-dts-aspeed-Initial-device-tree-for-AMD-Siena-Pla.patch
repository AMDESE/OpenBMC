+/ {
+	model = "AMD Cinnabar BMC";
+	compatible = "amd,cinnabar-bmc", "aspeed,ast2600";
+
+	aliases {
+		serial4 = &uart5;
+		ethernet0 = &mac3;
+		ethernet1 = &mac2;
+	};
