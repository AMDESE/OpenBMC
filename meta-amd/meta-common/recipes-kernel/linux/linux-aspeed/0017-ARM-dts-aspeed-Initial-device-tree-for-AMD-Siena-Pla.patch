+				reg = <0x61>;
+			};
+
+			p0_vdd_11_sus@62 {
+				//VDD 11 SUS
+				compatible = "isil,isl68137";
+				reg = <0x62>;
+			};
+
+			p0_vdd_vddio_run@63 {
+				//VDD VDDIO RUN
+				compatible = "isil,isl68137";
+				reg = <0x63>;
+			};
+
+			p0_vdd_18_dual@64 {
+				//VDD 18 DUAL
+				compatible = "isil,isl68137";
+				reg = <0x64>;
+			};
+
+			p0_vdd_33_dual@65 {
+				//VDD 33 DUAL VRM
+				compatible = "isil,isl68137";
+				reg = <0x65>;
+			};
+		};
+	};
