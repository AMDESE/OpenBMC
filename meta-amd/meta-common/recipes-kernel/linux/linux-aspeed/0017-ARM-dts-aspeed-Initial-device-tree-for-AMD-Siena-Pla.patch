+			#address-cells = <1>;
+			#size-cells = <0>;
+			reg = <5>;
+
+			lm75a@48 {	// PWR_CONN
+				compatible = "national,lm75a";
+				reg = <0x48>;
+			};
+
+			lm75a@49 {	// SOUTH VR
+				compatible = "national,lm75a";
+				reg = <0x49>;
+			};
+
+			lm75a@4a {	// WEST DIMM
+				compatible = "national,lm75a";
+				reg = <0x4a>;
+			};
+
+			lm75a@4b {	// EAST M.2
