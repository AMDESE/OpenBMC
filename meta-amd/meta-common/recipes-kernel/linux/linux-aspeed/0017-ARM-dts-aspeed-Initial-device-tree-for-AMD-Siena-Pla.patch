+// Unused
+&i2c6 {
+	// Net name i2c3 (SCM_I2C3)
+	status = "okay";
+};
+
+// HPM Board ID
+&i2c7 {
+	// Net name i2c4 (SCM_I2C4)
+	status = "okay";
+
