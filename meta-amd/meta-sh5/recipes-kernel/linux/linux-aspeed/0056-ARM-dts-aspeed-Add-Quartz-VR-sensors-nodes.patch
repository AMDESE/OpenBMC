+                        };
+
+                        p1_vdd_11_sus@63 {
+                                //VDD 11 sus
+                                compatible = "isil,isl68137";
+                                reg = <0x63>;
+                        };
+
+                        p1_vdd_18_dual@64 {
+                                //VDD 18 DUAL
+                                compatible = "isil,isl68137";
+                                reg = <0x64>;
+                        };
+
+                        p1_vdd_33_dual@65 {
+                                //VDD 33 DUAL VRM
+                                compatible = "isil,isl68137";
+                                reg = <0x65>;
+                        };
+                };
 	};
 };

